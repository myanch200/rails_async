<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: form_classes %>
  </div>

  <div class="">
    <%= form.label :description %>
    <%= form.rich_text_area :description, class: form_classes %>
  </div>

  <div class="my-10">
    <%= form.label :cover %>
    <%= form.file_field :cover %>

    
    <% if book.cover.persisted? %>
      <%= image_tag book.cover, class: 'w-64 h-64 object-cover', width:100, height: 100%>
    <% end %>
    
  </div>
  <div class="mb-4">
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status, class: form_classes %>
  </div>

  <div class="mb-4">
    <%= form.label :isbn, style: "display: block" %>
    <%= form.text_field :isbn, class: form_classes %>
  </div>

  <div class="mb-4">
    <%= form.label :author_id, style: "display: block" %>
    <%= form.collection_select :author_id, Author.all, :id, :name, class: form_classes %>
  </div>

  <div class="mb-4">
    <%= form.submit "Save", class: 'bg-sky-600 px-4 py-2 rounded-md shadow-md text-sky-200 cursor-pointer' %>
  </div>
<% end %>
