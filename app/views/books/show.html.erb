<div class="bg-gray-100 py-10 px-5">
  <h1 class="font-bold text-4xl"><%= @book.name %></h1>
  <p><%= @book.author.name %></p>
  
  <% if @book.cover.attached? %>
    <%= image_tag @book.cover, class: "w-64 h-64 rounded-md" %>
  <% end %>
  <p class="my-5 prose"><%= @book.description %></p>
  <div>
    <%= link_to "Edit this book", edit_book_path(@book) %> |
    <%= link_to "Back to books", books_path %>

    <%= button_to "Destroy this book", @book, method: :delete %>
  </div>
</div>


